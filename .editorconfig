# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
indent_size = 2
max_line_length = 100
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{json}]
indent_size = 2
